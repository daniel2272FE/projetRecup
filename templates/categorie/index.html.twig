{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Liste des Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.libelleCategorie }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}"><button class="btn btn-outline-info">voir</button></a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><button class="btn btn-outline-warning">editer</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie ajouté</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}"> <button class="btn btn-outline-primary">Créer nouveau</button></a>
{% endblock %}
