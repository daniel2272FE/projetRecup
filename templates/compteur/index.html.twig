{% extends 'base.html.twig' %}

{% block title %}Compteur{% endblock %}

{% block body %}
    <h1>liste des Compteurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero Compteur</th>
                <th>Serie</th>
                <th>Marque</th>
                <th>Type Compteur</th>
                <th>Index Compteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compteur in compteurs %}
            <tr>
                <td>{{ compteur.id }}</td>
                <td>{{ compteur.numCompteur }}</td>
                <td>{{ compteur.serie }}</td>
                <td>{{ compteur.marque }}</td>
                <td>{{ compteur.typeCompteur }}</td>
                <td>{{ compteur.indexCompteur }}</td>
                <td>
                    <a href="{{ path('compteur_show', {'id': compteur.id}) }}">voir</a>
                    <a href="{{ path('compteur_edit', {'id': compteur.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune compteur n'est ajouter</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('compteur_new') }}">Ajouter nouveau compteur</a>
{% endblock %}
