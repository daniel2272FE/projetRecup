<form method="post" action="{{ path('compteur_delete', {'id': compteur.id}) }}" onsubmit="return confirm('Vous êtes sûr de vouloir continuer?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ compteur.id) }}">
    <button class="btn btn-outline-danger">Supprimer</button>
</form>
