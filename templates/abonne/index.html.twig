{% extends 'base.html.twig' %}

{% block title %}Abonne index{% endblock %}

{% block body %}
    <h1>Abonne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Cin</th>
                <th>DateCin</th>
                <th>LieuCin</th>
                <th>Profession</th>
                <th>Telephone</th>
                <th>ReferenceClient</th>
                <th>RefEnc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for abonne in abonnes %}
            <tr>
                <td>{{ abonne.id }}</td>
                <td>{{ abonne.nom }}</td>
                <td>{{ abonne.prenom }}</td>
                <td>{{ abonne.adresse }}</td>
                <td>{{ abonne.cin }}</td>
                <td>{{ abonne.dateCin ? abonne.dateCin|date('Y-m-d') : '' }}</td>
                <td>{{ abonne.lieuCin }}</td>
                <td>{{ abonne.profession }}</td>
                <td>{{ abonne.telephone }}</td>
                <td>{{ abonne.referenceClient }}</td>
                <td>{{ abonne.refEnc }}</td>
                <td>
                    <a href="{{ path('abonne_show', {'id': abonne.id}) }}">show</a>
                    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('abonne_new') }}">Create new</a>
{% endblock %}
