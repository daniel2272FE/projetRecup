{% extends 'base.html.twig' %}

{% block title %}Abonné{% endblock %}

{% block body %}
    <h1>Abonné</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonne.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonne.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ abonne.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ abonne.adresse }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ abonne.cin }}</td>
            </tr>
            <tr>
                <th>DateCin</th>
                <td>{{ abonne.dateCin ? abonne.dateCin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LieuCin</th>
                <td>{{ abonne.lieuCin }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ abonne.profession }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ abonne.telephone }}</td>
            </tr>
            <tr>
                <th>ReferenceClient</th>
                <td>{{ abonne.referenceClient }}</td>
            </tr>
            <tr>
                <th>RefEnc</th>
                <td>{{ abonne.refEnc }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('abonne_index') }}">Voir la liste</a>

    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}">Editer</a>

    {{ include('abonne/_delete_form.html.twig') }}
{% endblock %}
